.recipe-detail-wrap
  display flex
  flex-wrap wrap
  
  > *
    width calc(50% - 10px)
    margin 5px
    
    +below('tablet')
      width 100%
      margin 0 0 10px 0
    
  
  .image-wrap
    position relative
    +below('tablet')
      min-height 400px
    
    .image-container
      position absolute
      top 0
      left 0
      bottom 0
      right 0
      
      background-size cover
      background-position center center

  .text-wrap
    background-color orange
    color white
    padding 10px 30px
    text-align right
    font-nunito()
    
    +at('mobile')
      margin-left 0
      margin-top 10px
    
    .recipe-step
      position relative
      font-size 2rem
      font-weight 400
      margin 25px 0
      padding-bottom 10px
      border-bottom 2px solid alpha(black, .125)
      
      &:before
        content ''
        display block
        size(180px, 3px)
        background-color alpha(black, .125)
        position absolute
        right 0
        top calc(100% + 2px)
        
    .recipe-item
      font-size 1.16rem
      margin 7px 0
      line-height 1.3

  .howto
    counter-reset mylist
    .recipe-item
      counter-increment mylist
      border-bottom 1px solid alpha(white, .4)
      padding 7px 25px 7px 5px
      margin 0
      position relative
      &:last-child
        border-bottom 0
        
      &:before
        content counter(mylist)
        position absolute
        top 0
        bottom 0
        right 0
        display flex
        align-items center
        justify-content center
        width 20px
        color alpha(white, .65)
        
        




