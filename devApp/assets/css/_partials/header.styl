header.sanes-header
  position absolute
  top 0
  left 0
  width 100%
  z-index 500
  background-color header-brown
  height 150px
  display flex
  border-bottom 7px solid navy
  box-shadow -1px 1px 5px alpha(black, .6)
  box-sizing border-box
  
  +below(1280px)
    height 120px
  
  +at('tablet')
    height 100px
    
  +at('mobile')
    height 80px
    
  #mobile-menu
    width 220px
    background-image linear-gradient(-45deg, alpha(navy, .9), alpha(navy, .97) ) 
    position fixed
    top 0
    left -220px
    bottom 0
    overflow-y auto
    transition .2s ease
    
    &.open
      transform translateX(220px)

    ul.mobile-menu-list
      li.header-menu-item
        color white
        border-bottom 1px solid alpha(white, .2)
        a
          padding 15px 20px
          color inherit
          text-decoration none
          font-size 1.5rem
          display block
    +desktop()
      display none
  
  .main-wrapper
    display flex
    align-items center
    
    h1.logo
      margin 0 30px
      
      +below(1280px)
        img
          height 80px
      
      +at('tablet')
        img
          height 70px

      +at('mobile')
        img
          height 40px
    
    .tool-bar
      flex 1
      align-self stretch
      display flex

      ul.header-menu-list
        flex 1
        display flex
        align-items stretch
        justify-content space-between
        
        +below('tablet')
          display none

        li.header-menu-item
          display flex
          align-items stretch
          position relative
          color navy
          font-weight 400
          margin 0 5px

          &.active
            font-weight 700
          
          &:hover
          &.active

            color alpha(black, .5)

            &:after
              content ''
              position absolute
              bottom 0
              left 50%
              transform translateX(-50%)
              width 0
              height 0
              border-style solid
              border-width 0 10px 14px 10px
              border-color transparent transparent navy transparent

          a
            flex 1
            display flex
            align-items center
            color inherit
            font-weight inherit

            padding 0 10px
            font-size 1.42rem // 17px
            text-decoration none
            text-transform uppercase
            
            +below(1280px)
              font-size 1.1rem
            

      &:nth-of-type(1)
        ul.header-menu-list
          justify-content flex-end

      &:nth-of-type(2)
        ul.header-menu-list
          justify-content flex-start

