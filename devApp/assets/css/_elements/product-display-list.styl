ul.product-display-list
  display block
  overflow hidden
  
  li.product-display-item
    col(1/5, gutter: 0)
    
    +at('tablet')
      col(1/4, gutter:0)
      
    +at('mobile')
      col(1/2, gutter: 0)

    .product-name
      background-color navy
      color white
      padding 9px 0
      font-size 1.16rem
      font-weight 400
      text-align center
      wnite-space nowrap
      text-transform uppercase
      
      +at('tablet')
        font-size 1rem
      
      +at('mobile')
        font-size .85rem
      
    .image-wrap
      width 100%
      
      display flex
      align-items center
      justify-content center
      overflow hidden

    img
      min-width 100%
      max-width 100%
      flex-shrink 0
      
    &:nth-child(even)
      .product-name
        background-color navy - 30%
        
    +below('tablet')
      &:nth-child(5n)
        display none