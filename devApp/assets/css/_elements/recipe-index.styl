.recipe-wrap
  display flex
  
  +at('mobile')
    flex-direction column
  
  .image-wrap
    flex 1
    align-self stretch
    position relative
    background-color alpha(orange, .2)
    
    +at('mobile')
      &:after
        content ''
        display block
        padding-bottom 100%

    .image-container
      position absolute
      top 10px
      left 10px
      bottom 10px
      right 10px

      display flex
      align-items center
      justify-content center
      overflow hidden
      
      background-position center center
      background-size cover
      
      img
        min-width 100%
        min-height 100%

  .text-wrap
    flex 1
    background-color orange
    color white
    padding 10px 30px
    margin-left 10px
    text-align right
    font-nunito()
    
    +at('mobile')
      margin-left 0
      margin-top 10px
    
    .recipe-step
      position relative
      font-size 2rem
      font-weight 400
      margin 25px 0
      padding-bottom 10px
      border-bottom 2px solid alpha(black, .125)
      
      &:before
        content ''
        display block
        size(180px, 3px)
        background-color alpha(black, .125)
        position absolute
        right 0
        top calc(100% + 2px)
        
    .recipe-item
      font-size 1.16rem
      margin 7px 0
      line-height 1.3

        
.orange-bg .recipe-wrap .image-wrap .image-container
  top 0
  right 0
  bottom 0
  left 0