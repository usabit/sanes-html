ul.product-category-list
  height 270px
  background-image url('../img/product-category-list-background.png')
  background-size cover
  background-position center center
  
  display flex
  align-items center
  justify-content space-around
  padding 0 10%
  
  +at('mobile')
    height initial
    padding 30px 0
    flex-direction column
  
  li.product-category-item
    color navy
    flex 1

    +at('mobile')
      margin 20px 0
    
    svg
    path
      fill @color

    a
      position relative
      color inherit
      font-size 1.15rem
      text-decoration none
      text-transform uppercase
      
      display flex
      flex-direction column
      align-items center
      justify-content center
      padding-top 90px
      
      +at('mobile')
        padding-top 60px
      
      img
        height 70px
        position absolute
        top 0
        left 50%
        transform translateX(-50%)
        
        +at('mobile')
          height 40px
        
        &.hover
          display none
      
      &:hover
        color white
        
        img.hover
          display block
        img.original
          display none
          

