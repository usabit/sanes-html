section.cards
  margin-top 30px
  
  .flex
    +at('mobile')
      flex-direction column

  .card
    col(1/2, cycle: 2, gutter: 2)
    background-color alpha(black, .1)
    padding 20px

    display flex
    
    +at('mobile')
      col(1, uncycle: 2)
      margin-bottom 20px

    +below(500px)
      flex-direction column
    
    .image-wrap
      max-width 50%
      position relative   

      +below(500px)
        max-width initial

      img
        width 100%   

    .text-wrap
      flex 1
      display flex
      flex-direction column
      padding-left 20px
      
      +below(500px)
        padding-top 20px
        padding-left 0
      
      h3
        color #754c24
        font-size 2rem
          
        +below('tablet')
          font-size 1.6rem
                  
      .card-info
        margin 10px 0
        
        span.date
          font-size 1.5rem
          color #a07e5c
          
          +below('tablet')
            font-size 1.2rem
                      
          &:after
            content ' | '
          
        span.type
          font-size 1.3333rem
          text-transform uppercase
          font-weight 300
          letter-spacing -1px
          color #837c75

          +below('tablet')
            font-size 1.2rem
