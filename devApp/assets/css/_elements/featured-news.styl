section.featured-news
  .news-wrapper    
    display flex
    
    +below('tablet')
      flex-direction column
    
    .image-wrap
      flex 1
      img
        width 100%
        
    .text-wrap
      flex 1
      padding 30px
      display flex
      flex-direction column

      h2
        font-size 3rem
        color navy
        font-style italic
        letter-spacing -1px

      p.news-info-wrap
        color white
        font-size 1.5rem
        font-weight 300
        text-transform uppercase
        margin 10px 0

      p.brief
        font-size 1.333rem
        color #754c24
        line-height 1.3

      .center
        margin-top 20px
        justify-content flex-end