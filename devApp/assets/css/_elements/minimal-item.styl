section.minimal-items
  background-color alpha(black, .1)
  padding 20px 0
  margin 30px 0

ul.minimal-list  
  li.minimal-item 
    position relative
    col(1/2, cycle: 2, gutter: 2)
    margin 20px 0
    
    &:after
      content ''
      position absolute
      width 100%
      height 3px
      background-color alpha(white, .6)
      bottom -20px
      left 0

    +above('desktop')
      &:nth-last-child(-n+2)
        &:after
          background-color transparent
        
    +below('tablet')
      col(1, uncycle: 2)
      &:last-child
        &:after
          background-color transparent

    a
      display flex
      align-items stretch
      text-decoration none
      
      > *
        display flex
        align-items center
        justify-content center
        
      img
        margin-right 15px
        align-self center
        
      .news-brief-wrap
        flex-direction column
        align-items flex-start
        margin-right 15px
        padding-right 15px
        border-right 2px solid alpha(black, .4)
        
        .date
          font-size 2rem
          color alpha(#754c24, .8)
          +below('tablet')
            font-size 1.2rem
          
        .type
          font-size 1.16rem
          color alpha(black, .4)
          margin-top 5px
          text-transform uppercase
          +below('tablet')
            font-size 1rem
        
      .title
        flex 1
        font-size 1.84rem
        color #754c24
        line-height 1.3
        justify-content flex-start
        
        +below('tablet')
          font-size 1.2rem
    